@model List<PasswordReminder.UI.Models.PasswordCardViewModel>

@{
    ViewData["Title"] = "My Passwords";
    var grouped = Model?.GroupBy(p => p.CategoryName ?? "Uncategorized").ToList() ?? new();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

@if (!grouped.Any())
{
    <div class="alert alert-info text-center">
        You have no saved passwords yet. Click "Add New" to get started.
    </div>
}
else
{
    <div class="container">
        @foreach (var group in grouped)
        {
            <h5 class="mt-4 text-secondary border-bottom pb-1">@group.Key (@group.Count())</h5>
            <div class="row">
                @foreach (var item in group)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <div class="card shadow-sm h-100 border-0">

                            <!-- Logo -->
                            <a href="@item.Url" target="_blank">
                                <div style="height: 100px; width: 100%; background: #fff; display: flex; align-items: center; justify-content: center;">
                                    <img src="https://logo.clearbit.com/@item.Domain"
                                         onerror="this.onerror=null; this.src='/images/default-icon.png';"
                                         style="max-height: 80px; max-width: 80%; object-fit: contain;" />
                                </div>
                            </a>

                            <!-- Info + Actions -->
                            <div class="d-flex justify-content-between align-items-center px-3 py-2" style="font-size: 0.85rem;">
                                <div class="text-start">
                                    <div class="fw-bold">@item.Title</div>
                                    <div class="text-muted" style="font-size: 0.75rem;">@item.Username</div>
                                </div>
                                <div class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="me-2" title="Edit">
                                        <i class="bi bi-pencil-square text-warning fs-6"></i>
                                    </a>
                                    <a href="#" data-id="@item.Id" class="text-danger delete-btn" title="Delete">
                                        <i class="bi bi-trash fs-6"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

<!-- Delete form -->
<form id="deleteForm" method="post" asp-action="Delete" class="d-none">
    <input type="hidden" name="id" id="deleteId" />
</form>

@section Scripts {
    <script src="~/js/password-index.js" asp-append-version="true"></script>
}
